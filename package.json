    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.15",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.29.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.1.7",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
